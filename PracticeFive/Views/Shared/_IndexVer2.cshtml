
@{
    ViewBag.Title = "View";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Save</title>
    <link rel="stylesheet" href="~/Content/indexVer2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <!-------------------- Nav Section ------------------->
    <section class="header">
        <nav>
            <a href="@Url.Action("Index","Home")" class="imgBox"><img class="logo" src="/Img/logo.png" alt=""></a>
            <ul class="menu">
                <li>
                    @if (Session["UserID"] == null)
                    {
                        @Html.ActionLink("救援通報", "List", "Rescue")
                    }
                    else
                    {
                        @Html.ActionLink("救援通報", "List", "RescueMember")
                    }
                    <ul class="subs">
                        @if (Session["UserID"] == null)
                        {
                            <li class="submenu">@Html.ActionLink("我要通報", "Login", "Home")</li>
                            <li class="submenu">@Html.ActionLink("我要救援", "List", "Rescue")</li>
                        }
                        else
                        {
                            <li class="submenu">@Html.ActionLink("我要通報", "Rescue", "RescueMember")</li>
                            <li class="submenu">@Html.ActionLink("我要救援", "List", "RescueMember")</li>
                        }
                    </ul>
                </li>
                <li>
                    @if (Session["UserID"] == null)
                    {
                        @Html.ActionLink("認養資訊", "List", "Transfer")
                    }
                    else
                    {
                        @Html.ActionLink("認養資訊", "List", "TransferMember")
                    }
                    <ul class="subs">
                        @if (Session["UserID"] == null)
                        {
                            <li class="submenu">@Html.ActionLink("我要送養", "Login", "Home")</li>
                            <li class="submenu">@Html.ActionLink("我要認養", "List", "Transfer")</li>
                        }
                        else
                        {
                            <li class="submenu">@Html.ActionLink("我要送養", "Transfer", "TransferMember")</li>
                            <li class="submenu">@Html.ActionLink("我要認養", "List", "TransferMember")</li>
                        }
                    </ul>
                </li>
                <li>
                    @if (Session["UserID"] == null)
                    {
                        @Html.ActionLink("文章分享", "List", "Blog")
                    }
                    else
                    {
                        @Html.ActionLink("文章分享", "List", "BlogMember")
                    }
                    <ul class="subs">
                        @if (Session["UserID"] == null)
                        {
                            <li class="submenu">@Html.ActionLink("救援心得", "ResuceExperience", "Blog")</li>
                            <li class="submenu">@Html.ActionLink("認養故事", "TransferStory", "Blog")</li>
                        }
                        else
                        {
                            <li class="submenu">@Html.ActionLink("救援心得", "ResuceExperience", "BlogMember")</li>
                            <li class="submenu">@Html.ActionLink("認養故事", "TransferStory", "BlogMember")</li>
                        }
                    </ul>
                </li>
                <li>@Html.ActionLink("聯絡我們", "ContactUs", "Home")</li>
                <li>
                    @if (Session["UserID"] == null)
                    {
                        @Html.ActionLink("會員專區", "Login", "Home")
                    }
                    else
                    {
                        @Html.ActionLink("會員專區", "Profilo", "Member")
                        <ul class="subs">
                            <li class="submenu">@Html.ActionLink("基本資料", "Profilo", "Member")</li>
                            <li class="submenu">@Html.ActionLink("通報清單", "RescueList", "Member")</li>
                            <li class="submenu">@Html.ActionLink("送養清單", "TransferList", "Member")</li>
                            <li class="submenu">@Html.ActionLink("追蹤清單", "TraceList", "Member")</li>
                            <li class="submenu">@Html.ActionLink("登出", "LogOut", "Member")</li>
                        </ul>
                    }
                </li>
            </ul>

            <i class="fas fa-bars"></i>
        </nav>
        <div class="text-box">
            <h1>Save, Home, Ensure</h1>
            <div class="txtContent">
                <p>替瀕死動物帶來希望；</p>
                <p>給孤單的動物一個家；</p>
                <p>成為愛動物者的聚集地。</p>
            </div>
            @if (Session["UserID"] == null)
            {
                @Html.ActionLink("我要通報", "Login", "Home", new {@class = "btn btn-warning"})
                @Html.ActionLink("我要送養", "Login", "Home", new { @class = "btn btn-warning" })
            }
            else
            {
                @Html.ActionLink("我要通報", "Rescue", "RescueMember", new { @class = "btn btn-warning" })
                @Html.ActionLink("我要送養", "Transfer", "TransferMember", new { @class = "btn btn-warning" })                
            }
        </div>
    </section>

    @RenderBody()

    <section class="contactUs">
        <div class="container-fluid d-flex justify-content-center">
            <div class="contactBox">
                <h1 class="title">聯絡我們</h1>
                <div class="formBox">
                    <label for="">你的名字：</label>
                    <input type="text" placeholder="王大明">
                    <label for="">你想表達的事情：</label>
                    <input type="text" placeholder="Ex功能有問題">
                    <label for="">詳細情況：</label>
                    <textarea name="details" id="details" cols="30" rows="10" placeholder="Ex在通報過程中按送出但沒有成功新增"></textarea>
                </div>
                <input type="submit" class="btn btn-secondary">
            </div>
        </div>
    </section>


    <section class="footer">
        <div class="footerBox">
            <h2>Save, Home, Ensure</h2>
            <p>為你的需求永遠在這裡</p>
            <div class="navbarFooter">
                @if (Session["UserID"] == null)
                {
                    @Html.ActionLink("我要通報", "Login", "Home")
                    @Html.ActionLink("我要幫助", "List", "Rescue")
                    @Html.ActionLink("我要送養", "Login", "Home")
                    @Html.ActionLink("我要認養", "List", "Transfer")
                    @Html.ActionLink("會員專區", "Login", "Home")

                }
                else
                {
                    @Html.ActionLink("我要通報", "Rescue", "RescueMember")
                    @Html.ActionLink("我要幫助", "List", "RescueMember")
                    @Html.ActionLink("我要送養", "Transfer", "TransferMember")
                    @Html.ActionLink("我要認養", "List", "TransferMember")
                    @Html.ActionLink("會員專區", "Profilo", "Member")
                }

            </div>
            <div class="mediaIcon">
                <i class="fab fa-facebook-square"></i>
                <i class="fab fa-instagram"></i>
                <i class="fa-brands fa-twitter"></i>
                <i class="fa-brands fa-google-plus-g"></i>
                <i class="fa-brands fa-youtube"></i>
            </div>

        </div>
    </section>
    <script src="/Scripts/indexVer2.js"></script>
</body>
</html>

